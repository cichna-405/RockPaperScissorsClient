        <Image Grid.Column="1" HorizontalAlignment="Left" Height="100" Margin="290,88,0,0" VerticalAlignment="Top" Width="100"/>
        <Image Margin="312,83,372,230" Stretch="Fill" Source="pack://siteoforigin:,,,/—Pngtree—a torn note paper_5540244.png" Grid.Column="1" RenderTransformOrigin="-1.471,-3.759"/>
